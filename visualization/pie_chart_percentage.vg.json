{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 400,
    "height": 400,
    "title": "Total Pollutants Emission by Continent",
    "data": {
        "url": "https://raw.githubusercontent.com/JingXuen/FIT3179_Data-Visualization-2/refs/heads/main/data/total_pollutants_by_continent_year.csv"
    },
    "params": [
        {
            "name": "year_selection",
                "bind": {
                    "input": "range",
                    "min": 1922,
                    "max": 2022,
                    "name": "Year: "
                },
            "value": 1922
        }
    ],
    "transform": [
        {
            "filter": "datum.Year == year_selection"
        },
        {
            "calculate": "datum['Total_Pollutants'] ",
            "as": "Total Pollutants (%)"
        }
    ],
    "layer": [
        {
            "encoding": {
                "theta": {
                    "field": "Total Pollutants (%)",
                    "type": "quantitative",
                    "stack": "normalize"
                },
                "color": {
                    "field": "Continent",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "Africa",
                            "Asia",
                            "Europe",
                            "North America",
                            "Oceania",
                            "South America"
                        ],
                        "range": [
                            "#e74c3c",
                            "#9b59b6",
                            "#2980b9",
                            "#e67e22",
                            "#ba4a00",
                            "#aab7b8 "
                        ]
                    }
                }
            },
            "mark": {
                "type": "arc",
                "tooltip": true
            }
        }
    ]
}