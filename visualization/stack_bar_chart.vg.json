{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#d5dbdb",
  "width": 600,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/JingXuen/FIT3179_Data-Visualization-2/refs/heads/main/data/aggregated_pollutants_by_continent_year.csv"
  },
  "params": [
    {
      "name": "continent_selection",
      "bind": {
        "input": "select",
        "options": [
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continents: "
      },
      "value": "Asia"
    }
  ],
  "transform": [
    {
      "filter": "datum.Continent == continent_selection"
    },
    {
      "fold": [
        "Nitrogen oxide (NOx)",
        "Sulphur dioxide (SO₂) emissions",
        "Carbon monoxide (CO) emissions",
        "Black carbon (BC) emissions",
        "Ammonia (NH₃) emissions",
        "Non-methane volatile organic compounds (NMVOC) emissions"
      ],
      "as": ["Pollutant Type", "Pollutant Emission"]
    },
    {
      "calculate": "datum['Pollutant Emission'] / 1000000",
      "as": "Pollutant Emission (million tonnes)"
    }
  ],
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "title": "Year",
      "axis": {
        "labelPadding": 5,
        "labelOverlap": true,
        "labelAngle": 0,
        "gridColor": "#9D9D9D"
      }
    },
    "y": {
      "aggregate": "sum",
      "field": "Pollutant Emission (million tonnes)",
      "type": "quantitative",
      "title": "Total Pollutant Emission (million tonnes)",
      "axis": {
        "gridColor": "#9D9D9D"
      }
    },
    "color": {
      "field": "Pollutant Type",
      "type": "nominal",
      "scale": {
        "domain": [
          "Nitrogen oxide (NOx)",
          "Sulphur dioxide (SO₂) emissions",
          "Carbon monoxide (CO) emissions",
          "Black carbon (BC) emissions",
          "Ammonia (NH₃) emissions",
          "Non-methane volatile organic compounds (NMVOC) emissions"
        ],
        "range": [
          "#1f77b4",
          "#ff7f0e",
          "#f1c40f",
          "#d62728",
          "#9467bd",
          "#8c564b"
        ]
      },
      "title": "Pollutant Type"
    },
    "tooltip": [
      {"field": "Year", "type": "ordinal", "title": "Year"},
      {"field": "Pollutant Type", "type": "nominal", "title": "Pollutant Type"},
      {"field": "Pollutant Emission (million tonnes)", "type": "quantitative", "title": "Pollutant Emission (million tonnes)"}
    ]
  },
  "mark": {"type": "bar"}
}
