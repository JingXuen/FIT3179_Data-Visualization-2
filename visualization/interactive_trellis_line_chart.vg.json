{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 375,
  "height": 200,
  "data": {
    "url": "https://raw.githubusercontent.com/JingXuen/FIT3179_Data-Visualization-2/refs/heads/main/data/aggregated_pollutants_by_continent_year.csv"
  },
  "params": [
    {
      "name": "continent_selection",
      "bind": {
        "input": "select",
        "options": [
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continents: "
      },
      "value": "Asia"
    },
    {
      "name": "grid",
      "select": {
        "type": "interval",
        "resolve": "global",
        "translate": "[pointerdown[!event.shiftKey], window:pointerup] > window:pointermove!",
        "zoom": "wheel![!event.shiftKey]"
      },
      "bind": "scales"
    }
  ],
  "transform": [
    {
      "filter": "datum.Continent == continent_selection"
    },
    {
      "fold": [
        "Nitrogen oxide (NOx)",
        "Sulphur dioxide (SO₂) emissions",
        "Carbon monoxide (CO) emissions",
        "Black carbon (BC) emissions",
        "Ammonia (NH₃) emissions",
        "Non-methane volatile organic compounds (NMVOC) emissions"
      ],
      "as": [
        "Pollutant Type",
        "Value"
      ]
    },
    {
      "filter": {
        "param": "grid",
        "field": "Year"
      }
    }
  ],
  "mark": {
    "type": "line"
  },
  "encoding": {
    "facet": {
      "field": "Pollutant Type",
      "columns": 3
    },
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": "Year",
      "axis": {
        "format": "%Y"
      }
    },
    "y": {
      "field": "Value",
      "type": "quantitative",
      "title": "Pollutants Emission (kilo tonnes)"
    },
    "color": {
      "field": "Pollutant Type",
      "type": "nominal",
      "scale": {
        "domain": [
            "Nitrogen oxide (NOx)",
            "Sulphur dioxide (SO₂) emissions",
            "Carbon monoxide (CO) emissions",
            "Black carbon (BC) emissions",
            "Ammonia (NH₃) emissions",
            "Non-methane volatile organic compounds (NMVOC) emissions"
        ],
        "range": [
            "#1f77b4",
            "#ff7f0e",
            "#f1c40f",
            "#d62728",
            "#9467bd",
            "#8c564b"
        ]
      },
    "title": "Pollutant Type"
    },
    "tooltip": [
      {
        "field": "Entity",
        "type": "nominal"
      },
      {
        "field": "Year",
        "type": "temporal",
        "format": "%Y"
      },
      {
        "field": "Value",
        "type": "quantitative",
        "format": ",",
        "title": "Pollutants Emission (kilo tonnes)"
      },
      {
        "field": "Pollutant Type",
        "type": "nominal",
        "title": "Pollutant Type"
      }
    ]
  }
}
  