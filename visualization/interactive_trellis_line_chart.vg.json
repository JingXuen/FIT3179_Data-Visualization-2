{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 400,
    "height": 200,
    "title": "Pollutants Emission in Malaysia",
    "data": {
      "url": "https://raw.githubusercontent.com/JingXuen/FIT3179_Data-Visualization-2/refs/heads/main/data/aggregated_pollutants_by_continent_year.csv"
    },
    "params": [
      {
        "name": "continent_selection",
        "bind": {
          "input": "select",
          "options": [
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "labels": [
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "name": "Continent Selection: "
        },
        "value": "Asia"
      },
      {
        "name": "grid",
        "select": {
          "type": "interval",
          "resolve": "global",
          "translate": "[pointerdown[!event.shiftKey], window:pointerup] > window:pointermove!",
          "zoom": "wheel![!event.shiftKey]"
        },
        "bind": "scales"
      }
    ],
    "transform": [
      {
        "filter": "datum.Continent == continent_selection"
      },
      {
        "fold": [
          "Nitrogen oxide (NOx)",
          "Sulphur dioxide (SO₂) emissions",
          "Carbon monoxide (CO) emissions",
          "Black carbon (BC) emissions",
          "Ammonia (NH₃) emissions",
          "Non-methane volatile organic compounds (NMVOC) emissions"
        ],
        "as": [
          "Selected_Pollutant",
          "Value"
        ]
      },
      {
        "filter": {
          "param": "grid",
          "field": "Year"
        }
      }
    ],
    "mark": {
      "type": "line"
    },
    "encoding": {
      "column": {
        "field": "Selected_Pollutant"
      },
      "x": {
        "field": "Year",
        "type": "temporal",
        "title": "Year",
        "axis": {
          "format": "%Y"
        }
      },
      "y": {
        "field": "Value",
        "type": "quantitative",
        "title": "Pollutants Emission (kilo tonnes)"
      },
      "color": {
        "field": "Selected_Pollutant",
        "type": "nominal",
        "scale": {
          "domain": [
            "Nitrogen oxide (NOx)",
            "Sulphur dioxide (SO₂) emissions",
            "Carbon monoxide (CO) emissions",
            "Black carbon (BC) emissions",
            "Ammonia (NH₃) emissions",
            "Non-methane volatile organic compounds (NMVOC) emissions"
          ],
          "range": [
            "#1f77b4",
            "#ff7f0e",
            "#2ca02c",
            "#d62728",
            "#9467bd",
            "#8c564b"
          ]
        },
        "title": "Pollutant Type"
      },
      "tooltip": [
        {
          "field": "Entity",
          "type": "nominal"
        },
        {
          "field": "Year",
          "type": "temporal",
          "format": "%Y"
        },
        {
          "field": "Value",
          "type": "quantitative",
          "format": ",",
          "title": "Pollutants Emission (kilo tonnes)"
        },
        {
          "field": "Selected_Pollutant",
          "type": "nominal",
          "title": "Pollutant Type"
        }
      ]
    }
  }
  